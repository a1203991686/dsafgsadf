<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordSuggestDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5B706A6A"
        android:orientation="horizontal">

        <!--blng_sents_part-双语例句-->
        <!--auth_sents_part-权威例句-->
        <!--longman-朗文-->
        <!--web_trans-网络释义-->
        <!--special-专业释义-->
        <!--ee-英英释义-->
        <!--wikipedia_digest-百科-->
        <!--exam_dict-应试-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_wordSuggest_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a"
                android:textColor="#000"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_wordSuggest_ukspeech"
                    android:layout_width="20sp"
                    android:layout_height="20sp" />

                <TextView
                    android:id="@+id/tv_wordSuggest_ukphone"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="英"
                    android:textColor="#5B706A6A" />

                <ImageView
                    android:id="@+id/iv_wordSuggest_usspeech"
                    android:layout_width="20sp"
                    android:layout_height="20sp" />

                <TextView
                    android:id="@+id/tv_wordSuggest_usphone"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="美"
                    android:textColor="#5B706A6A" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/lv_wordSuggest_meaningList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经典例句" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="双语" />

            <TextView
                android:id="@+id/tv_wordSuggest_blng_sents_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="权威" />

            <TextView
                android:id="@+id/tv_wordSuggest_auth_sents_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原声" />

            <TextView
                android:id="@+id/tv_wordSuggest_media_sents_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wordSuggest_web_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络释义" />

            <ListView
                android:id="@+id/lv_wordSuggest_web_trans_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>